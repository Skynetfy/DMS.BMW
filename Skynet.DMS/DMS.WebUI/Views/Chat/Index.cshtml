    <div class="jvectormap-label" style="display: none; left: 451px; top: 945px;">Chile</div>
    <script>
        $(function () {
            var chat = $.connection.chatHub;
            $.connection.hub.qs = { "un": getQueryString("un") };
            chat.client.pushMessage = function (name, message) {
                // Add the message to the page.
                $('.direct-chat-messages').append('<div class="direct-chat-msg"> <div class="direct-chat-info clearfix"><span class="direct-chat-name pull-left">' + htmlEncode(name)
                    + '</span><span class="direct-chat-timestamp pull-right">' + new Date().toLocaleString() + '</span></div> <img class="direct-chat-img" src="/Content/img/user1-128x128.jpg" alt="message user image"><div class="direct-chat-text">' + htmlEncode(message) + ' </div> </div>');
            };
            // Get the user name and store it to prepend to messages.
            $('#displayname').val(prompt('Enter your name:', ''));
            // Set initial focus to message input box.
            $('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    chat.server.sendChatMessage($('#displayname').val(), $('#message').val());
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
            });
        });
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
        function getQueryString(name) {
            var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
            var r = window.location.search.substr(1).match(reg);
            if (r != null) return unescape(r[2]); return null;
        }
    </script>
